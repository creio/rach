{
    "version": "2.5.0",
    "audio": "none",
    "bootloader": "systemd-bootctl",
    "gfx_driver": "All open-source (default)",
    "silent": false,
    "swap": true,
    "hostname": "box",
    "kernels": [
        "linux"
    ],
    "nic": {
        "type": "nm"
    },
    "ntp": true,
    "plugin": null,
    "profile": "minimal",
    "script": "guided",
    "sys-encoding": "utf-8",
    "sys-language": "en_US",
    "keyboard-language": "us",
    "keyboard-layout": "us",
    "timezone": "Europe/Moscow",
    "mirror-region": "Worldwide",
    "parallel downloads": 3,
    "packages": ["nano", "micro", "reflector", "docker", "git", "bash-completion", "htop", "zsh", "networkmanager"],
    "services": ["docker", "NetworkManager"],
    "custom-commands": [
        "cd /home/creio; git clone https://aur.archlinux.org/yay-bin.git",
        "chown -R creio:users /home/creio/yay-bin",
        "usermod -g users -aG docker creio",
        "cd /home/creio/yay-bin; sudo -u creio makepkg -c -C -f -s --noconfirm --needed; pacman -U --noconfirm *.pkg.tar.zst"
    ],
    "!encryption-password": "1111",
    "!root-password": "1",
    "!users": [
        {
            "!password": "1",
            "sudo": true,
            "username": "creio"
        }
    ]
}
